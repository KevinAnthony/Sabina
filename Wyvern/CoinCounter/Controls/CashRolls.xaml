<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Noside.CoinCounter.Controls"
             x:Class="Noside.CoinCounter.Controls.CashRolls"
             mc:Ignorable="d" Width="300" Margin="3"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderBrush="{StaticResource TextAndLineBrush}" BorderThickness="4" CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="38"/>
            </Grid.RowDefinitions>
        <Grid x:Name="TheGrid" Margin="3"/>
            <Button Grid.Row="1" Margin="3" Content="Cash Rolls" Style="{StaticResource NsdButtonStyle}" Click="OnCashRollsClick"/>
        </Grid>
    </Border>
</UserControl>
