<Window x:Class="Noside.Wyvern.Common.Windows.SpashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        SizeToContent="Manual" mc:Ignorable="d" Style="{StaticResource NsdWindowStyle}" WindowStartupLocation="CenterScreen"
        Title="SpashScreen" Height="125" Width="675" Loaded="SpashScreen_OnLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Label Content="{StaticResource GearAnimation}" Foreground="{StaticResource LineBrush}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" RenderTransformOrigin=".5,.5"/>
    </Grid>
</Window>
