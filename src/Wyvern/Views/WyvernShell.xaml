<Window x:Class="Noside.Wyvern.Views.WyvernShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mvvm="http://prismlibrary.com/"
        mvvm:ViewModelLocator.AutoWireViewModel="True"
        Style="{DynamicResource NsdWindowStyle}"
        MouseDown="OnDragMouseDown" Loaded="OnWindowLoaded"
        Title="Wyvern Mk 5" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" Grid.Column="0" mvvm:RegionManager.RegionName="TitleBarArea"/>
        <ContentControl Grid.Row="1" Grid.Column="0" mvvm:RegionManager.RegionName="CoinViewArea"/>
    </Grid>
</Window>

