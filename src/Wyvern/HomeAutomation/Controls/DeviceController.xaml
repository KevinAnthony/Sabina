<UserControl x:Class="Noside.HomeAutomation.Controls.DeviceController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Noside.HomeAutomation.Controls"
             xmlns:model="clr-namespace:Noside.HomeAutomation.Model"
             mc:Ignorable="d" d:DataContext="{model:HomeAutomationViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="48" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ToggleButton Style="{StaticResource NsdOnOffSlider}" Margin="3,0"
                      IsChecked="{Binding IsOn, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <Slider Minimum="1" Maximum="254" Grid.Row="1" Style="{StaticResource NsdColorSlider}" Margin="7"
                Value="{Binding Brigness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Visibility="{Binding IsDimmable, Converter={StaticResource BoolToVisibilityConverter}}" />
        <local:ColorPicker Grid.Row="2"
                           Visibility="{Binding IsRGB, Converter={StaticResource BoolToVisibilityConverter}}" />
    </Grid>
</UserControl>